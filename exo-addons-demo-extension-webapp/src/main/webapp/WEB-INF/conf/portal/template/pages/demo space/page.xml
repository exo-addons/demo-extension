<?xml version="1.0" encoding="UTF-8"?>
<page>
    <owner-type></owner-type>
    <owner-id/>
    <name/>
    <container id="SpaceMenu" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
        <portlet-application>
            <portlet>
                <application-ref>social-portlet</application-ref>
                <portlet-ref>SpaceMenuPortlet</portlet-ref>
                <preferences>
                    <preference>
                        <name>SPACE_URL</name>
                        <value>{spaceName}</value>
                        <read-only>false</read-only>
                    </preference>
                </preferences>
            </portlet>
            <access-permissions>*:/platform/users</access-permissions>
            <show-info-bar>false</show-info-bar>
        </portlet-application>
    </container>
    <container id="SpaceApplications" template="system:/groovy/portal/webui/container/UITableColumnContainer.gtmpl">
        <container id="ActivityStreamPortlet" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
            <portlet-application>
                <portlet>
                    <application-ref>social-portlet</application-ref>
                    <portlet-ref>SpaceActivityStreamPortlet</portlet-ref>
                    <preferences>
                        <preference>
                            <name>SPACE_URL</name>
                            <value>{spaceName}</value>
                            <read-only>false</read-only>
                        </preference>
                    </preferences>
                </portlet>
                <show-info-bar>false</show-info-bar>
            </portlet-application>
        </container>
        <container id="CollabApplicationContainer" template="system:/groovy/portal/webui/container/UIContainer.gtmpl" width="320px">
            <portlet-application>
                <portlet>
                    <application-ref>portlet-pack</application-ref>
                    <portlet-ref>QuicklookApplication</portlet-ref>
                    <preferences>
                        <preference>
                            <name>app</name>
                            <value>Wiki</value>
                            <read-only>false</read-only>
                        </preference>
                    </preferences>
                </portlet>
                <show-info-bar>false</show-info-bar>
            </portlet-application>
            <portlet-application>
                <portlet>
                    <application-ref>portlet-pack</application-ref>
                    <portlet-ref>QuicklookApplication</portlet-ref>
                    <preferences>
                        <preference>
                            <name>app</name>
                            <value>Forum</value>
                            <read-only>false</read-only>
                        </preference>
                    </preferences>
                </portlet>
                <show-info-bar>false</show-info-bar>
            </portlet-application>
            <portlet-application>
                <portlet>
                    <application-ref>portlet-pack</application-ref>
                    <portlet-ref>QuicklookApplication</portlet-ref>
                    <preferences>
                        <preference>
                            <name>app</name>
                            <value>FAQ</value>
                            <read-only>false</read-only>
                        </preference>
                    </preferences>
                </portlet>
                <show-info-bar>false</show-info-bar>
            </portlet-application>
            <portlet-application>
                <portlet>
                    <application-ref>portlet-pack</application-ref>
                    <portlet-ref>QuicklookApplication</portlet-ref>
                    <preferences>
                        <preference>
                            <name>app</name>
                            <value>Agenda</value>
                            <read-only>false</read-only>
                        </preference>
                    </preferences>
                </portlet>
                <show-info-bar>false</show-info-bar>
            </portlet-application>
        </container>

    </container>
</page>
