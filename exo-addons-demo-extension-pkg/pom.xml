<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>demo-extension</artifactId>
    <groupId>org.exoplatform.addons.demo</groupId>
    <version>0.1.0-SNAPSHOT</version>
  </parent>
  <artifactId>exo-addons-demo-extension-pkg</artifactId>
  <packaging>pom</packaging>
  <name>eXo Addons - Demo Set Extension Package</name>
  <properties>
  <!-- 3rd party libraries versions -->
    <chat.addon.version>0.9.0</chat.addon.version>
    <portlet.pack.version>0.3.0-SNAPSHOT</portlet.pack.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.addons.demo</groupId>
      <artifactId>exo-addons-demo-extension-webapp</artifactId>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.addons.demo</groupId>
      <artifactId>exo-addons-demo-extension-config</artifactId>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
          <groupId>org.exoplatform.addons.demo</groupId>
          <artifactId>exo-addons-demo-extension-component</artifactId>
          <type>jar</type>
          <scope>provided</scope>
      </dependency>
    <dependency>
      <groupId>org.exoplatform.addons.chat</groupId>
      <artifactId>server</artifactId>
      <version>${chat.addon.version}</version>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.addons.chat</groupId>
      <artifactId>application</artifactId>
      <version>${chat.addon.version}</version>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.addons.chat</groupId>
      <artifactId>exo-addons-chat-extension</artifactId>
      <version>${chat.addon.version}</version>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.addons.chat</groupId>
      <artifactId>exo-addons-chat-extension-config</artifactId>
      <version>${chat.addon.version}</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.addons.portlets</groupId>
      <artifactId>exo-addons-demo-portlets-webapp</artifactId>
      <version>${portlet.pack.version}</version>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>package-extension</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>src/main/assemblies/exo-addons-demo-extension.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
